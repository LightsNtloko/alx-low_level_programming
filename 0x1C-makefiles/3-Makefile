# 3-Makefile

# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CP = cp

.PHONY: all clean oclean fclean re backup
all: $(OBJ)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ \#* $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re:
	$(RM) $(OBJ)
	$(CC)	-c -o main.o main.c
	$(CC)	-c -o school.o school.c
	$(CC) main.o school.o -o $(NAME)
